<div>
  <div>
    <h2>Welcome, <b>{{name}} </b>!</h2>
  </div>
</div>
<div>
  <div>
    {{#if recipes.length}}
    <div class="recipe-list">
      <h3>Your Recipes:</h3>
      {{#each recipes as |recipe|}}
      <div class="box">
        <div>
          <h4><a href="/recipe/{{recipe.id}}">{{recipe.name}}</a></h4>
          <b>Updaed: </b>
          <p>{{format_date recipe.date_posted}}</p>
        </div>
        <div class="navbar-end">
          <button data-id="{{recipe.id}}" class="button is-danger">DELETE</button>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
  </div>

  <script src="./js/profile.js"></script>