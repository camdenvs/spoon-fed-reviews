<!--when people select a specific recipe to look at-->
<div>
  <div>
    <h2><b>{{name}}</b></h2>
  </div>
  <div>
    <b>Ingredients: </b>
    <p>
    <pre>{{ingredients}}</pre>
    </p>
    <b>Instructions: </b>
    <p>
    <pre>{{instructions}}</pre>
    </p>
    <p><b>Created by: </b> {{user.name}} {{recipe.date_posted}}</p>

    <div>
      <form class="field" id="new-comment-form" data-id="{{id}}">
        <div class="field">
          <label class="label">Leave a comment:</label>
          <div class="control">
            <textarea class="textarea" placeholder="Leave a comment" id="comment-body"></textarea>
          </div>
        </div>
        <div class="field is-grouped">
          <div class="control">
            <button class="button is-link" type="submit">Submit</button>
          </div>
        </div>
        <div class="field">
          <label class="checkbox">
          <div class="control">
            <input type="checkbox">
          Upvote recipe
          </div>
        </label>
        </div>       
      </form>
    </div>
    {{#each comments as |comment| }}
    <div class="box">
      <b>Review by: {{user.name}}</b>
      <p>{{text}}</p>
    </div>
    {{/each}}
  </div>
</div>

<script src="../js/recipe.js"></script>